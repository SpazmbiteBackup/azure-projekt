@model PasswordManager.Models.PasswordEntry

@{
    ViewData["Title"] = "Edit Password";
}
<style>
#top_bar{
    height: 6%;
    width: 100%;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
}
#content{
    height: 94%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
#edit_page{
    height: 100%;
    width: 40%;
    display: flex;
    flex-direction: column;
    overflow: auto;
    gap: 1em;
    align-items: center;
}
.form-group{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 2em;
}
.control-label{
    font-size: 0.6em;
}
.form-control{
    width: 80%!important;
    font-size: 0.9em;
    padding: 0.5em 0em;
    background-color: rgba(0,0,0,0.2);
    border-radius: 1em;
    border: 1px solid rgba(200,200,200,0.4);
    color: white;
    font-family: "Montserrat", sans-serif;
    text-align: center;
}
.form-control option{
    color: black;
}
.btn{
    font-size: 1.2em;
    padding: 0.5em 1em;
    background-color: #9eb4db;
    border: 0 solid;
    border-radius: 1em;
    color: black;
    font-weight: bold;
    font-family: "Montserrat", sans-serif;
}
.btn:hover{
    background-color: white;
}
</style>
<div id="top_bar">
    <span>Edit password</span>
</div>
<div id="content">
    
    <div id="edit_page">
        <i class="fa-solid fa-key" style="font-size: 2em; margin-top: 0.5em;"></i>
        <form asp-action="Edit" style="width: 100%;">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value=1>Social Medias</option>
                    <option value=2>Mailing Services</option>
                    <option value=3>Streaming</option>
                    <option value=0>Other</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fav" class="control-label">Add to favorites</label>
                <select asp-for="Fav" class="form-control">
                    <option value=0>No</option>
                    <option value=1>Yes</option>
                </select>
                <span asp-validation-for="Fav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
    </div>
</div>
