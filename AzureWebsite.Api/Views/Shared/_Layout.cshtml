<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] :: PasswordManager</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="https://icons.veryicon.com/png/o/object/material-design-icons/lock-76.png">
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PasswordManager.styles.css" asp-append-version="true" />-->
    <style>
        :root{
            *::-webkit-scrollbar {
            height: 10px;
            width: 10px;
            }
            *::-webkit-scrollbar-track {
            border-radius: 5px;
            background-color: #0C0A25;
            }

            *::-webkit-scrollbar-track:hover {
            background-color: #14113C;
            }

            *::-webkit-scrollbar-track:active {
            background-color: #241F6C;
            }

            *::-webkit-scrollbar-thumb {
            border-radius: 5px;
            background-color: #9C2C52;
            }

            *::-webkit-scrollbar-thumb:hover {
            background-color: #BE3260;
            }

            *::-webkit-scrollbar-thumb:active {
            background-color: #DB3E73;
            }
        }
        body{
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 0;
            background: url(https://hypeddit-gates-prod.s3.amazonaws.com/niq78n_coverartmanual);
            background-position: center;
            background-size: cover;
            font-family: "Montserrat", sans-serif;
        }
        a, button[type=submit]{
            color: #9eb4db;
            text-decoration: none;
            border: none;
            background: none;
            font-family: "Montserrat", sans-serif;
            padding: 0;
            margin: 0;
        }
        a:hover{
            color: white;
            text-decoration: none;
        }
        #main_body{
            display: flex;
            min-width: 1320px;
            width: 70vw;
            min-height: 660px;
            height: 70vh;
            
        }
        #left_body{
            width: 20%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            background-color: rgba(30,30,40,0.92);
            border-radius: 20px 0 0 20px;
            padding: 10px;
            backdrop-filter: blur(10px);
            color: white;
            border-top: 1px solid rgba(255,255,255,0.2);
            border-left: 1px solid rgba(255,255,255,0.1);
            border-bottom: 1px solid rgba(5,5,5,0.2);
        }
        #right_body{
            width: 80%;
            background-color: rgba(5,5,20,0.99);
            border-radius: 0 20px 20px 0;
            backdrop-filter: blur(10px);
            color: white;
            border-top: 1px solid rgba(255,255,255,0.2);
            border-right: 1px solid rgba(5,5,5,0.1);
            border-bottom: 1px solid rgba(5,5,5,0.2);
        }
        #full_left_panel{
            display: flex;
            flex-direction: column;
            gap: 1em;
        }
        header, #panel_main, #categories{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        #web_title{
            font-family: "Varela Round", sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 2em;
        }
        #web_title > i {
            color: #bd325f;
        }
        .web_authors{
            font-size: 0.6em;
            color: rgba(255,255,255,0.7)
        }
        .pause{
            height: 1px;
        }

        .text-center{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }
        
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div id="main_body">
        <div id="left_body">
            <div id="full_left_panel">
                <header>
                    <span id="web_title"><i class="fa-solid fa-shield-halved"></i> The Vault</span>
                    <span class="web_authors">Password Manager</span>
                    <span class="web_authors">made by Ortman & Chorąży</span>
                    <!--<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                        <div class="container-fluid">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PasswordManager</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>-->
                </header>
                <span class="pause"></span>
                <div id="panel_main" style="align-items: start; gap: 0.5em">
                    <span style="color: rgba(255,255,255,0.7); font-size: 0.6em;">Menu</span>
                    <span><i class="fa-solid fa-lock"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")">All Passwords</a></span>
                    <span><i class="fa-regular fa-star"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")?mode=5">Favorites</a></span>
                </div>
                <span class="pause"></span>
                <div id="categories" style="align-items: start; gap: 0.5em">
                    <span style="color: rgba(255,255,255,0.7); font-size: 0.6em;">Categories</span>
                    <span><i class="fa-solid fa-users"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")?mode=2">Social Medias</a></span>
                    <span><i class="fa-solid fa-envelope"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")?mode=3">Mailing Services</a></span>
                    <span><i class="fa-solid fa-film"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")?mode=4">Streaming</a></span>
                    <span><i class="fa-solid fa-chart-simple"></i>&nbsp;&nbsp;<a href="@Url.Action("Index", "Password")?mode=1">Others</a></span>
                </div>
            </div>
            <footer class="border-top footer text-muted">
                <div class="web_authors">
                    &copy; 2024 - The Vault - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>

        <div id="right_body" class="container">
        <main role="main" class="pb-3" style="display: flex; flex-direction:column; height: 100%;">
            @RenderBody()
        </main>
    </div>
    </div>
    

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
